<main>
    <h1>Data desde el back-end</h1>
    <div class="container-fluid">
        <h2>Accesos:</h2>
        <div class="mb-3 mt-3 ms-3">
            <a class="btn btn-primary" href="/products"> Tienda </a>
            <a class="btn btn-primary" href="/api/sessions/perfil"> Ver Perfil </a>
            <a class="btn btn-primary" href="/realtimeproducts"> Cargar productos en DB </a>
            <a class="btn btn-primary" href="/usersview"> Administración de Usuarios </a>
            <a class="btn btn-primary" href="http://localhost:8080/carts/64ea879041a9d352f5d12596"> Ver Carritos </a>
            <a class="btn btn-primary" href="http://localhost:8080/apidocs"> Ver Documentación </a>
            <a class="btn btn-danger" href="/api/sessions/logout"> Cerrar Sesión</a>
        </div>
    </div>
    <div class="container-fluid mt-2">
        <h2>Productos en la base de datos:</h2>
        <div class="row gap-4 p-4 ms-4">
            {{#each products }}
                <div class=" col-2 col-6 col-sm-4 card  mb-3 flex-grow-1 shadow" style="max-width: 18rem;">
                    <div class="card-header bg-transparent ">
                        <p class="card-text"><small class="text-body-secondary">{{this.category}}</small>
                        <p class="fw-light opacity-75" style="font-size: 14px;">{{this.id}}</p>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fs-4 text fw-bold">{{this.title}}</h5>
                        <p class="fs-6 fw-light opacity-75">Propietario: {{this.owner}}</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center bg-transparent fs-4 text ">
                        <div>
                            ${{this.price}}
                        </div>
                        <div class="fs-6 fw-light opacity-75">Stock: {{this.stock}}</div>
                    </div>
                </div>
            {{/each}}
        </div>
        </div>
    </div>
    <div class="container-fluid mt-2">
        <h2>Usuarios en la base de datos:</h2>
        <div class="row gap-4 p-4 ms-4">
            {{#each users }}
                <div class=" col-2 col-6 col-sm-4 card  mb-3 flex-grow-1 shadow" style="max-width: 18rem;">
                    <div class="card-header bg-transparent ">
                        <p class="fw-light opacity-75" style="font-size: 14px;">{{this.id}}</p>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fs-4 text fw-bold">{{this.name}}</h5>
                        <h5 class="card-title fs-4 text fw-bold">{{this.lastName}}</h5>
                        <p class="card-text">{{this.email}}</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center bg-transparent fs-4 text ">
                        <div>
                            Rol: {{this.rol}}
                        </div>
                        <div class="fs-6 fw-light opacity-75">Age: {{this.age}}</div>
                    </div>
                </div>
            {{/each}}
        </div>
        </div>
    </div>
</main>
<script src="./js/home.js"></script>